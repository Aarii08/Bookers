<h1>Editing Book</h1>


<%= form_with model: @book do |f| %>

  <div class= "field">
    <label class= "book_title">Title</label>
    </br>
    <%= f.text_field :title %>
  </div>

  <div class= "field">
    <label class= "book_body">Body</label>
    </br>
    <%= f.text_area :body %>
  </div>

  <div class= "action">
    <%= f.submit 'Update Book' %>
  </div>

  <% end %>

  <span><%= link_to "Show", book_path(@book.id) %></span>
  |
  <span><%= link_to "Back", books_path %></span>


