
<h1>Books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "Show", 'books/#{book.id}' %></td>
    <td><%= link_to "Edit", 'books/#edit' %></td>
  </tr>
  <% end %>
</table>
